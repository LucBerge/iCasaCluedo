    <requires aggregate="true" optional="true" specification="fr.liglab.adele.icasa.device.GenericDevice" field="genericDevices">
      <callback method="bindGenericDevice" type="bind"/>
      <callback method="unbindGenericDevice" type="unbind"/>
    </requires>
    <callback method="start" transition="validate"/>
    <callback method="stop" transition="invalidate"/>
    <provides specifications="fr.esisar.icasa.cluedo.common.CluedoPlateService"/>
    <requires aggregate="true" optional="true" specification="fr.liglab.adele.icasa.simulator.Person" field="persons">
      <callback method="bindPerson" type="bind"/>
      <callback method="unbindPerson" type="unbind"/>
    </requires>
  </component>
  <component classname="fr.esisar.icasa.cluedo.player.CluedoPlayer" name="CluedoPlayer">
    <provides specifications="fr.esisar.icasa.cluedo.common.CluedoPlayerService"/>
    <requires specification="fr.esisar.icasa.cluedo.common.CluedoPlateService" field="cluedoPlateService"/>
    <callback method="start" transition="validate"/>
    <callback method="stop" transition="invalidate"/>
  </component>
  <instance component="CluedoPlayer" name="CluedoPlayer-Olive"/>
  <instance component="CluedoPlayer" name="CluedoPlayer-LeBlanc"/>
